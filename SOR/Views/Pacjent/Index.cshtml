@model IEnumerable<SOR.Models.PacjentModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Lista pacjentów</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Zarejestruj pacjenta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pesel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rozpoznanie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="width:25%">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="width:25%">
                @Html.DisplayFor(modelItem => item.Pesel)
            </td>
            <td style="width:15%">
                @Html.DisplayFor(modelItem => item.Rozpoznanie)
            </td>
            <td style="width:35%">
                @Html.ActionLink("Przyjęcie", "Szpital", new { id = item.PacjentId }, new { @class = "btn btn-success"})
                @Html.ActionLink("Szczegóły", "Details", new { id = item.PacjentId }, new { @class = "btn btn-info" })
                @Html.ActionLink("Edytuj", "Edit", new { id = item.PacjentId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Wypisz", "Delete", new { id = item.PacjentId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
